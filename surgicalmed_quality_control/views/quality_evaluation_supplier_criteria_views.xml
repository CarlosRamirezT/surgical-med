<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Action for the quality.evaluation.supplier.criteria model -->
        <record id="action_quality_evaluation_supplier_criteria" model="ir.actions.act_window">
            <field name="name">Supplier Evaluation Criteria</field>
            <field name="res_model">quality.evaluation.supplier.criteria</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Supplier Evaluation Criteria
                </p>
            </field>
        </record>

        <!-- Tree view for quality.evaluation.supplier.criteria -->
        <record id="view_quality_evaluation_supplier_criteria_tree" model="ir.ui.view">
            <field name="name">quality.evaluation.supplier.criteria.tree</field>
            <field name="model">quality.evaluation.supplier.criteria</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="weight"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Menu item for Supplier Evaluation Criteria -->
        <menuitem
            id="menu_quality_config_supplier_criteria"
            name="Supplier Evaluation Criteria"
            action="action_quality_evaluation_supplier_criteria"
            parent="quality_control.menu_quality_configuration"
            sequence="30"/>
    </data>
</odoo>