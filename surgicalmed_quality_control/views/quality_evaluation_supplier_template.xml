<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_quality_evaluation_supplier_template_form" model="ir.ui.view">
        <field name="name">quality.evaluation.supplier.template.form</field>
        <field name="model">quality.evaluation.supplier.template</field>
        <field name="arch" type="xml">
            <form string="Quality Evaluation Supplier Template">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Criteria">
                            <field name="line_ids" context="{'default_evaluation_id': active_id}">
                                <tree editable="bottom">
                                    <field name="criteria_id"/>
                                    <field name="weight"/>
                                    <field name="evaluation"/>
                                    <field name="score" readonly="1"/>
                                    <field name="description"/>
                                    <field name="evaluation_method"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Activate" type="object" name="action_activate" class="btn-primary"/>
                    <button string="Deactivate" type="object" name="action_deactivate" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_quality_evaluation_supplier_template_tree" model="ir.ui.view">
        <field name="name">quality.evaluation.supplier.template.tree</field>
        <field name="model">quality.evaluation.supplier.template</field>
        <field name="arch" type="xml">
            <tree string="Quality Evaluation Supplier Templates">
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_quality_evaluation_supplier_template" model="ir.actions.act_window">
        <field name="name">Quality Evaluation Supplier Templates</field>
        <field name="res_model">quality.evaluation.supplier.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Quality Evaluation Supplier Template
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_quality_evaluation_supplier_template"
              name="Supplier Evaluation Templates"
              parent="quality_control.menu_quality_configuration"
              action="action_quality_evaluation_supplier_template"
              sequence="30"
              groups="quality.group_quality_manager"/>
</odoo>